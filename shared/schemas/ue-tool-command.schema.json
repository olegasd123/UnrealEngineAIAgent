{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ue-ai-agent.local/schemas/ue-tool-command.schema.json",
  "title": "UeToolCommand",
  "type": "object",
  "required": [
    "command",
    "params"
  ],
  "properties": {
    "command": {
      "type": "string",
      "enum": [
        "context.getSceneSummary",
        "context.getSelection",
        "scene.createActor",
        "scene.modifyActor",
        "scene.deleteActor",
        "landscape.sculpt",
        "landscape.paintLayer",
        "pcg.createGraph",
        "pcg.addNode",
        "pcg.connectNodes",
        "pcg.setNodeParam",
        "session.beginTransaction",
        "session.commitTransaction",
        "session.rollbackTransaction"
      ]
    },
    "params": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

