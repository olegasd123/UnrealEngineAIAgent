{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ue-ai-agent.local/schemas/task-plan-response.schema.json",
  "title": "TaskPlanResponse",
  "type": "object",
  "required": [
    "ok"
  ],
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "plan": {
      "type": "object",
      "required": [
        "summary",
        "steps"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "command",
              "params",
              "risk"
            ],
            "properties": {
              "command": {
                "type": "string"
              },
              "params": {
                "type": "object",
                "additionalProperties": true
              },
              "risk": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high"
                ]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
