{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ue-ai-agent.local/schemas/task-plan-response.schema.json",
  "title": "TaskPlanResponse",
  "type": "object",
  "required": [
    "ok"
  ],
  "properties": {
    "ok": {
      "type": "boolean"
    },
    "plan": {
      "type": "object",
      "required": [
        "summary",
        "steps"
      ],
      "properties": {
        "summary": {
          "type": "string"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "command",
              "params",
              "risk"
            ],
            "properties": {
              "command": {
                "type": "string",
                "const": "scene.modifyActor"
              },
              "params": {
                "type": "object",
                "required": [
                  "target"
                ],
                "properties": {
                  "target": {
                    "type": "string",
                    "const": "selection"
                  },
                  "deltaLocation": {
                    "type": "object",
                    "required": [
                      "x",
                      "y",
                      "z"
                    ],
                    "properties": {
                      "x": { "type": "number" },
                      "y": { "type": "number" },
                      "z": { "type": "number" }
                    },
                    "additionalProperties": false
                  },
                  "deltaRotation": {
                    "type": "object",
                    "required": [
                      "pitch",
                      "yaw",
                      "roll"
                    ],
                    "properties": {
                      "pitch": { "type": "number" },
                      "yaw": { "type": "number" },
                      "roll": { "type": "number" }
                    },
                    "additionalProperties": false
                  }
                },
                "anyOf": [
                  { "required": ["deltaLocation"] },
                  { "required": ["deltaRotation"] }
                ],
                "additionalProperties": false
              },
              "risk": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high"
                ]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
