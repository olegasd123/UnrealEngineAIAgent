{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ue-ai-agent.local/schemas/task-plan-request.schema.json",
  "title": "TaskPlanRequest",
  "type": "object",
  "required": [
    "prompt",
    "mode"
  ],
  "properties": {
    "prompt": {
      "type": "string",
      "minLength": 1
    },
    "mode": {
      "type": "string",
      "enum": [
        "chat",
        "agent"
      ]
    },
    "context": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

